<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalsApp.Views.MakeShiftTaskPage"
             >
    <VerticalStackLayout>
        <Label Text="Data Binding Example" FontSize="28" FontAttributes="Bold"/>
        <!--Binding will look at the binding you have in-->
        <!--the code behind file-->
        <Label Text="Task Name:"/>
        <Entry Text="{Binding TaskName}"></Entry>

        <Label Text="Task Number:"/>
        <Entry Text="{Binding TaskNumber}"></Entry>

        <Label Text="Reflected Data:"/>
        <Label Text="Task Name:"/>
        <Label Text="{Binding TaskName}"></Label>
        <Label Text="Task Number:"/>
        <Label Text="{Binding TaskNumber}"></Label>
    </VerticalStackLayout>
</ContentPage>